.header
  .wrap
    .grid.hidden--on-desk
      .grid__item.width-6-12
        .header__hamburger-logo   
          =link_to('#home') do
            .sprite--logo-small
      .grid__item.width-6-12
        .header__hamburger   
          a.menu-link.icon--hamburger href="#menu" 
        
    .header__inner
      .header__logo
        =link_to('#home') do
          .sprite--logo
      .header__menu
        .header__text
          .Nav__animatescroll =link_to 'WHAT', '#what'
          .Nav__animatescroll =link_to 'OUR NETWORK', '#ournetwork'
          .Nav__animatescroll =link_to 'CLIENTS & PROJECTS', '#clients-projects'
          .Nav__animatescroll =link_to 'EVENTS', '#events'
          .Nav__animatescroll =link_to 'ABOUT', '#about'
          .Nav__animatescroll =link_to 'TEAM', '#team'
          .Nav__animatescroll =link_to 'CONTACTS', '#contacts'
          .Nav__animatescroll__lang  = t ('button_html')
        